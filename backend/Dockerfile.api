# FastAPI Backend Dockerfile
FROM python:3.11-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PYTHONPATH=/app/src

# System deps (curl for healthcheck; libgomp1 for xgboost runtime; build tools optional)
RUN apt-get update && apt-get install -y --no-install-recommends \
      curl \
      libgomp1 \
      build-essential \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Install dependencies first for better caching
COPY pyproject.toml /app/

# Copy backend-specific files (from repo root)
COPY ./backend/src/ /app/src/
COPY ./backend/configs/ /app/configs

# Copy off_the_beaten_path module
COPY backend/off_the_path/ /app/off_the_path/

# Ensure Python can find off_the_path module
ENV PYTHONPATH="/app:${PYTHONPATH}"

# Install uv (pipâ€™s fine here)
RUN python -m pip install --upgrade pip wheel \
 && pip install .

# Expose port
EXPOSE 8000

# Healthcheck (expects GET /health)
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
  CMD curl -f http://localhost:8000/health || exit 1

# Start server
CMD ["uvicorn", "src.api.main:app", "--host", "0.0.0.0", "--port", "8000"]
